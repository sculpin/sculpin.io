<head>
    <meta charset="utf-8">
    <meta name="generator" content="Sculpin (https://sculpin.io)" />
    <meta name="theme-color" content="#5b7c89">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    {% if page.full_title %}
    <title>{{ page.full_title|raw }}</title>
    {% else %}
    <title>{{ page.title }} &mdash; {{ site.title }} &mdash; {{ site.subtitle }}</title>
    {% endif %}
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="icon" href="{{ site.url }}/favicon.ico">
    <link rel="stylesheet" href="{{ site.url }}/components/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ site.url }}/css/style.css?v={{ site.assets_version }}">
    <link rel="stylesheet" href="{{ site.url }}/components/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ site.url }}/components/highlightjs/styles/github.css" />

    <link rel="apple-touch-startup-image" href="/images/jackson/2048x2048.png">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link rel="shortcut icon" sizes="76x76" href="/images/jackson/76x76.png">
    <link rel="shortcut icon" sizes="120x120" href="/images/jackson/120x120.png">
    <link rel="shortcut icon" sizes="128x128" href="/images/jackson/128x128.png">
    <link rel="shortcut icon" sizes="152x152" href="/images/jackson/152x152.png">
    <link rel="shortcut icon" sizes="196x196" href="/images/jackson/196x196.png">
    <link rel="shortcut icon" sizes="512x512" href="/images/jackson/512x512.png">
    <link rel="shortcut icon" sizes="1024x1024" href="/images/jackson/1024x1024.png">
    <link rel="shortcut icon" sizes="2048x2048" href="/images/jackson/2048x2048.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/images/jackson/76x76.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/images/jackson/120x120.png">
    <link rel="apple-touch-icon" sizes="128x128" href="/images/jackson/128x128.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/images/jackson/152x152.png">
    <link rel="apple-touch-icon" sizes="196x196" href="/images/jackson/196x196.png">
    <link rel="apple-touch-icon" sizes="512x512" href="/images/jackson/512x512.png">
    <link rel="apple-touch-icon" sizes="1024x1024" href="/images/jackson/1024x1024.png">
    <link rel="apple-touch-icon" sizes="2048x2048" href="/images/jackson/2048x2048.png">
</head>
<body>
    <header class="site">
        <nav class="navbar navbar-default navbar-static-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="site-mascot" title="Meet Jackson, the Sculpin mascot"></div>
                    <a class="navbar-brand" href="{{ site.url }}/">Sculpin</a>
                </div>
                <div class="collapse navbar-collapse navbar-ex1-collapse">
                    <ul class="nav navbar-nav">
                        <li {% if page.nav_name == "home" %} class="active"{% endif %}>
                            <a href="{{ site.url }}/">About</a>
                        </li>
                        <li {% if page.nav_name == "getstarted" %} class="active"{% endif %}>
                            <a href="{{ site.url }}/getstarted/">Get Started</a>
                        </li>
                        <li {% if page.nav_name == "download" %} class="active"{% endif %}>
                            <a href="{{ site.url }}/download/">Download</a>
                        </li>
                        <li {% if page.nav_name == "documentation" %} class="active"{% endif %}>
                            <a href="{{ site.url }}/documentation/">Documentation</a>
                        </li>
                        <li {% if page.nav_name == "community" %} class="active"{% endif %}>
                            <a href="{{ site.url }}/community/">Community</a>
                        </li>
                        <li>
                            <a href="http://blog.sculpin.io">Blog <i class="icon icon-external-link"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    {% if page.nav_name == "home" %}
        <section class="site-meta">
            <div class="container">
                <div class="site-mascot">
                    <a class="ir" href="{{ site.url }}/mascot/" title="Meet Jackson, the Sculpin mascot">Meet Jackson, the Sculpin mascot</a>
                </div>
                <div class="site-title">
                    <a href="{{ site.url }}/">Sculpin</a>
                </div>
                <div class="site-subtitle">
                    <a href="{{ site.url }}/">Static Site Generator</a>
                </div>
            </div>
        </section>
        <hr class="site-meta">
    {% endif %}
    <section class="content">
        <div class="container">
            {% block content_wrapper %}
            {% block content %}Fallback content. :){% endblock %}
            {% endblock %}
        </div>
    </section>
    <footer class="site">
        <div class="container">
            {% block footer %}
                <div class="mascot">
                    <a class="ir" href="{{ site.url }}/mascot/">Meet Jackson, the Sculpin mascot</a>
                </div>
                <div class="social">
                    <ul>
                        <li>
                            <a href="https://github.com/sculpin"><i class="icon icon-github"></i></a>
                        </li>
                        <li>
                            <a href="https://twitter.com/getsculpin"><i class="icon icon-twitter"></i></a>
                        </li>
                        <li>
                            <a href="https://www.facebook.com/getsculpin"><i class="icon icon-facebook"></i></a>
                        </li>
                        <li>
                            <a href="irc://irc.freenode.net/%23sculpin"><i class="icon icon-comment"></i> #sculpin</a>
                        </li>
                    </ul>
                </div>
                <div class="copyright">
                    &copy;{{ "now"|date("Y") }} <a href="http://dflydev.com/projects/sculpin">Dragonfly Development</a>
                </div>
            {% endblock %}
        </div>
    </footer>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="{{site.url}}/components/jquery/jquery.min.js"><\/script>')</script>
    <script defer src="{{ site.url }}/components/bootstrap/js/bootstrap.min.js"></script>
    {% if site.google_analytics_tracking_id %}
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', '{{ site.google_analytics_tracking_id }}', 'sculpin.io');
        ga('send', 'pageview');
      </script>
    {% endif %}
</body>
</html>
